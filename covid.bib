  journal = {Statistical Methods in Medical Research},
  keywords = {-statistic,Bayesian,biomarkers,cross-validation,Diagnostic test,Kullback-Leibler divergence,precision medicine,relative entropy,risk stratification,weight of evidence},
  language = {eng},
