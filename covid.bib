  file = {/mnt/pm/zotero/storage/CRUZ7WY9/Verity et al. - 2020 - Estimates of the severity of COVID-19 disease.pdf;/mnt/pm/zotero/storage/PI6BA9QX/2020.03.09.html},
  journal = {medRxiv},
  language = {en}
}

